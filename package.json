{
    "name": "bamboo-vscode",
    "displayName": "bamboo-vscode",
    "description": "",
    "version": "0.0.1",
    "publisher": "garyxuehong",
    "repository": "https://github.com/garyxuehong/bamboo-vscode",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:bamboo.listBuildPlans"
    ],
    "main": "./out/bamboo",
    "contributes": {
        "commands": [
            {
                "command": "bamboo.listBuildPlans",
                "title": "Bamboo: List all build plans"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Bamboo configuration",
            "properties": {
                "bamboo.server.uri": {
                    "type": "string",
                    "default": "",
                    "description": "Url to bamboo server, e.g. https://some.domain.com/bamboo"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "node-fetch": "^2.2.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "@types/node-fetch": "^2.1.2"
    }
}
